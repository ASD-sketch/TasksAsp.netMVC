
@{
    ViewData["Title"] = "Users";
}



@model List<User>

<h2>Manage Users</h2>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
            </td>
        </tr>
    }
</table>
