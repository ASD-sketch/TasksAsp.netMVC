
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@model Department

<h2>Add a New User</h2>

<form asp-action="Create" method="post">


    <div class="form-group">
        <label>Name</label>
        <input asp-for="DeptName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Manager</label>
        <input asp-for="Manager" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Location</label>
        <input asp-for="Location" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Staff Count</label>
        <input asp-for="StaffCount" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>