
@{
    ViewData["Title"] = "Register";
    // Layout = null;
}


<style>
   

    .register-container {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
        width: 350px;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    .input-group {
        margin-bottom: 15px;
        position: relative;
    }

        .input-group input {
            width: 100%;
            padding: 12px;
            padding-left: 40px;
            border: 2px solid #ccc;
            border-radius: 5px;
            outline: none;
            transition: 0.3s;
        }

            .input-group input:focus {
                border-color: #ff758c;
            }

        .input-group i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
        }

    .btn-register {
        width: 100%;
        padding: 12px;
        background: #ff758c;
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-register:hover {
            background: #e64572;
        }

    .login-link {
        display: block;
        margin-top: 15px;
        color: #ff758c;
        text-decoration: none;
        font-size: 14px;
    }

        .login-link:hover {
            text-decoration: underline;
        }
</style>




